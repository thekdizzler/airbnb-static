<div class="text-center padded">
  <h2>Our team</h2>

  <ul class="list-inline text-center">
    <% ["ciaran", "pedro"].each do |member| %>
      <li>
        <%= image_tag "#{member}.png", class: "avatar-larger" %>
        <h3><%= member.capitalize %></h3>
      </li>
    <% end %>
  </ul>

  <% link_to "mailto:me@me.com" do %>
    <% content_tag :p do %>
      <i class="fa fa-envelope"></i>
      Contact us
    <% end %>
  <% end %>
</div>
